@model UsuarioDetalle
<link href="/css/eliminaruser.css" rel="stylesheet" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">¿Desea eliminar los datos del usuario?</h2>
        </div>

        <div class="card-body">
            <form asp-action="EliminarUser" method="post">
                <div class="form-group row">
                    <label for="nombre" class="col-sm-3 col-form-label">Nombre</label>
                    <div class="col-sm-9 borde-none">
                        <input type="text" name="name" value="@Model.nombre" class="form-control" readonly />
                        <input type="hidden" name="name" value="@Model.nombre" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="apellido" class="col-sm-3 col-form-label">Apellido</label>
                    <div class="col-sm-9">
                        <input type="text" name="lastname" value="@Model.apellido" class="form-control" readonly />
                        <input type="hidden" name="lastname" value="@Model.apellido" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="dni" class="col-sm-3 col-form-label">DNI</label>
                    <div class="col-sm-9">
                        <input type="text" name="_dni" value="@Model.dni" class="form-control" readonly />
                        <input type="hidden" name="_dni" value="@Model.dni" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="email" class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                        <input type="email" name="_email" value="@Model.email" class="form-control" readonly />
                        <input type="hidden" name="_email" value="@Model.email" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="rol" class="col-sm-3 col-form-label">Rol</label>
                    <div class="col-sm-9">
                        <input type="text" name="_rol" value="@Model.rol" class="form-control" readonly />
                        <input type="hidden" name="_rol" value="@Model.rol" />
                    </div>
                </div>

                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-danger">Aceptar</button>
                    <a asp-action="GestionUser" class="btn btn-secondary ml-2">Atrás</a>
                </div>
            </form>
        </div>
    </div>
</div>
