@model UsuarioDetalle

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Editar Usuario</h2>
        </div>

        <div class="card-body">
            <form asp-action="EditarUser" method="post">
                <div class="form-group row">
                    <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="nombre" name="name" class="form-control" required />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="apellido" class="col-sm-2 col-form-label">Apellido</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="apellido" name="lastname" class="form-control" required />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="dni" class="col-sm-2 col-form-label">DNI</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="dni" name="_dni" class="form-control" required />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" asp-for="email" name="_email" class="form-control" required />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="rol" class="col-sm-2 col-form-label">Rol</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="rol" name="_rol" class="form-control" required />
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="GestionUser" class="btn btn-secondary ml-2">Atrás</a>
                </div>
            </form>
        </div>
    </div>
</div>
